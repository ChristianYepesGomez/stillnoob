# StillNoob API - Environment Variables
# Copy this file to .env and fill in the values

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3001

# Database (Turso)
# Local: file:./data/stillnoob.db
# Production: libsql://your-db-name-your-org.turso.io
TURSO_DATABASE_URL=file:./data/stillnoob.db
TURSO_AUTH_TOKEN=

# Auth
JWT_SECRET=change-me-to-a-random-string
JWT_REFRESH_SECRET=change-me-to-another-random-string

# WarcraftLogs API (https://www.warcraftlogs.com/api/clients)
WCL_CLIENT_ID=
WCL_CLIENT_SECRET=

# Blizzard API (https://develop.battle.net)
BLIZZARD_CLIENT_ID=
BLIZZARD_CLIENT_SECRET=
BLIZZARD_REGION=eu

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Encryption
ENCRYPTION_KEY=

# Monitoring
SENTRY_DSN=
