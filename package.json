{
  "name": "stillnoob",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:push": "npm -w @stillnoob/api run db:push",
    "db:generate": "npm -w @stillnoob/api run db:generate",
    "db:migrate": "npm -w @stillnoob/api run db:migrate"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "turbo": "^2.4.0"
  }
}
